<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if member_signed_in? %>
          <td><strong><%= post.member.username %></strong></td>
        <% else %>
          <td><strong>?????</strong></td>
        <% end %>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
      </tr>
      <tr><td></td></tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>